<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680" prefWidth="720" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.parcial.controlador.FormularioControlador">

    <children>

        <Label layoutX="200" layoutY="12" style="-fx-font-size:16px; -fx-font-weight:bold;" text="CRUD Vehiculos (Camion / Bus)">
         <font>
            <Font name="MS UI Gothic" size="22.0" />
         </font></Label>

        <!-- Formulario -->
        <Label layoutX="20" layoutY="60" text="Placa:" />
        <TextField fx:id="txtPlaca" layoutX="130" layoutY="55" prefWidth="200" />

        <Label layoutX="20" layoutY="100" text="Marca:" />
        <TextField fx:id="txtMarca" layoutX="130" layoutY="95" prefWidth="200" />

        <Label layoutX="370" layoutY="60" text="Modelo:" />
        <TextField fx:id="txtModelo" layoutX="430" layoutY="55" prefWidth="120" />

        <Label layoutX="370" layoutY="100" text="Capacidad (kg):" />
        <TextField fx:id="txtCapacidad" layoutX="470" layoutY="95" prefWidth="80" />

        <Label layoutX="20" layoutY="140" text="Conductor (nombre):" />
        <TextField fx:id="txtConductor" layoutX="130" layoutY="135" prefWidth="200" />

        <Label layoutX="370" layoutY="140" text="Camion:" />
        <TextField fx:id="txtGenero" layoutX="480" layoutY="135" prefWidth="150" />

        <Label layoutX="20" layoutY="180" text="Bus:" />
        <TextField fx:id="txtTemporadas" layoutX="130" layoutY="175" prefWidth="100" />

        <Label layoutX="20" layoutY="220" text="Tipo:" />
        <ComboBox fx:id="cmbTipo" layoutX="130" layoutY="215" prefWidth="140">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Camion" />
                    <String fx:value="Bus" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Botones -->
        <Button layoutX="20" layoutY="260" onAction="#accionCrear" prefWidth="100" text="Crear" />
        <Button layoutX="140" layoutY="260" onAction="#accionBuscar" prefWidth="140" text="Buscar por Placa" />
        <Button layoutX="300" layoutY="260" onAction="#accionListar" prefWidth="120" text="Listar Todo" />
        <Button layoutX="440" layoutY="260" onAction="#accionModificar" prefWidth="100" text="Modificar" />
        <Button layoutX="560" layoutY="260" onAction="#accionEliminar" prefWidth="100" text="Eliminar" />

        <Button layoutX="20" layoutY="305" onAction="#accionSerializar" prefWidth="160" text="Serializar (guardar)" />
        <Button layoutX="200" layoutY="305" onAction="#accionDeserializar" prefWidth="160" text="Deserializar (cargar)" />

        <!-- Tabla -->
        <TableView fx:id="tabla" layoutX="20" layoutY="360" prefHeight="300" prefWidth="680">
            <columns>
                <TableColumn fx:id="colPlaca" prefWidth="90" text="CÃ³digo" />
                <TableColumn fx:id="colMarca" prefWidth="200" text="Marca" />
                <TableColumn fx:id="colModelo" prefWidth="70" text="Modelo" />
                <TableColumn fx:id="colConductor" prefWidth="150" text="Conductor" />
                <TableColumn fx:id="colTipo" prefWidth="80" text="Tipo" />
                <TableColumn fx:id="colExtra" prefWidth="90" text="Info extra" />
            </columns>
        </TableView>

    </children>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</AnchorPane>
